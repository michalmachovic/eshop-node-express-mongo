<%- include('includes/head.ejs') %>
<title><%= pageTitle %></title>
</head>

<body>
    <%- include('includes/nav.ejs') %>
    <h2>Products</h2>
    <% if (products.length > 0) { %>
        <div class="products">
            <% products.forEach(function(item) {  %>
                <div>
                    <a href="/products/<%= item._id %>">
                        <h3>
                            <%= item.title %>
                        </h3>

                        <div>
                            <%= item.description %>
                        </div>

                        <div>
                            <%= item.price %>
                        </div>

                        <div class="actions">
                            <a href="/admin/edit-product/<%= item._id %>">Edit</a>
                        </div>
                    </a>
                    
                </div>
            <%  }); %>
        </div>    
    <% } %>    
</body>
</html>